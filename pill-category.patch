+        icon-name: "audio-x-generic-symbolic";
+        tooltip-text: _("Audio");
+        styles ["filter-pill"]
+      }
+      Gtk.ToggleButton documents_button {
+        icon-name: "x-office-document-symbolic";
+        tooltip-text: _("Documentos");
+        styles ["filter-pill"]
+      }
+      Gtk.ToggleButton archives_button {
+        icon-name: "package-x-generic-symbolic";
+        tooltip-text: _("Arquivos compactados");
+        styles ["filter-pill"]
+      }
