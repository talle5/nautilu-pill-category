+  child: Gtk.Box {
+    margin-start: 12;
+    margin-end: 12;
+    margin-top: 6;
+    margin-bottom: 6;
+
+    Gtk.FlowBox {
+      selection-mode: none;
+      activate-on-single-click: false;
+      row-spacing: 6;
+      column-spacing: 6;
+      max-children-per-line: 99;
